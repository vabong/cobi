
---
import Base from './Base.astro';
const { frontmatter } = Astro.props;
---
<Base title={`${frontmatter.title} â€” Cobi van Tonder`}>
  <article class="post">
    <div class="meta">{new Date(frontmatter.publishDate).toLocaleDateString()}</div>
    <h1>{frontmatter.title}</h1>
    {frontmatter.cover && <img class="hero" src={frontmatter.cover} alt={frontmatter.title} />}
    <slot />
    {frontmatter.tags && frontmatter.tags.length ? (
      <div class="tags">
        {frontmatter.tags.map(t => <a class="tag" href={`/tags/${encodeURIComponent(t)}/`}>{t}</a>)}
      </div>
    ) : null}
  </article>
</Base>

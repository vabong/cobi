---
import Base from "./Base.astro";
const { posts = [], title = "" } = Astro.props;

// Works locally ("/") and on GitHub Pages project sites ("/cobi/")
const base = import.meta.env.BASE_URL;

function withBase(url) {
  if (!url) return url;
  if (/^(https?:)?\/\//.test(url) || url.startsWith("data:")) return url;
  return `${base}${url.replace(/^\/+/, "")}`;
}
---

<Base title={title || "Blog"}>
  <main class="wrap">
    {posts.length === 0 ? (
      <p class="empty">No posts yet.</p>
    ) : (
      <div class="grid">
        {posts.map(({ slug, data }) => {
          const d = new Date(data.publishDate);
          const yyyy = String(d.getUTCFullYear());
          const mm = String(d.getUTCMonth() + 1).padStart(2, "0");
          const dd = String(d.getUTCDate()).padStart(2, "0");

          const href = withBase(`/post/${yyyy}/${mm}/${dd}/${slug}/`);

          return (
            <a href={href} class="card">
              {data.cover ? (
                <img
                  src={withBase(data.cover)}
                  alt={data.title}
                  class="thumb"
                  loading="lazy"
                />
              ) : (
                <div class="thumb placeholder" aria-hidden="true">
                  No image
                </div>
              )}

              <div class="card-body">
                <h3 class="card-title">{data.title}</h3>
                {data.publishDate && (
                  <p class="card-meta">
                    {new Date(data.publishDate).toLocaleDateString()}
                  </p>
                )}
              </div>
            </a>
          );
        })}
      </div>
    )}
  </main>

  <style>
    .wrap { max-width: 1100px; margin: 0 auto; padding: 32px 20px; font-family: Helvetica, Arial, sans-serif; }
    .empty { color: #666; }

    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
      gap: 24px;
    }

    .card {
      display: block;
      color: inherit;
      text-decoration: none;
      border: 1px solid #eee;
      border-radius: 12px;
      overflow: hidden;
      background: #fff;
      transition: box-shadow .2s ease, transform .2s ease;
    }

    .card:hover {
      box-shadow: 0 6px 20px rgba(0,0,0,.08);
      transform: translateY(-1px);
    }

    .thumb {
      display: block;
      width: 100%;
      height: 180px;
      object-fit: cover;
      background: #f4f4f4;
    }
    .thumb.placeholder {
      display:flex; align-items:center; justify-content:center;
      color:#999; font-size:.9rem;
    }

    .card-body { padding: 14px 16px 18px; }
    .card-title { margin: 0 0 6px; font-size: 18px; line-height: 1.25; }
    .card-meta { margin: 0; color: #777; font-size: 13px; }
  </style>
</Base>

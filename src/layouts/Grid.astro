---
import Base from "./Base.astro";
const { posts = [], title = "" } = Astro.props;
---

<Base title={title || "Blog"}>
  <main class="wrap">


    {posts.length === 0 ? (
      <p class="empty">No posts yet.</p>
    ) : (
      <div class="grid">
        {posts.map(({ data, slug }) => (
          <a class="card" href={`/blog/${slug}/`}>
            {data.cover ? (
              <img src={data.cover} alt={data.title} class="thumb" loading="lazy" />
            ) : (
              <div class="thumb placeholder">No image</div>
            )}
            <div class="card-body">
              <h3 class="card-title">{data.title}</h3>
              {data.publishDate && (
                <p class="card-meta">{new Date(data.publishDate).toLocaleDateString()}</p>
              )}
            </div>
          </a>
        ))}
      </div>
    )}
  </main>

  <style>
    .wrap { max-width: 1100px; margin: 0 auto; padding: 32px 20px; font-family: Helvetica, Arial, sans-serif; }
    .page-title { font-size: 32px; font-weight: 700; margin: 0 0 24px; }
    .empty { color: #666; }

    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
      gap: 24px;
    }
    .card {
      display: block;
      text-decoration: none;
      color: inherit;
      border: 1px solid #eee;
      border-radius: 12px;
      overflow: hidden;
      background: #fff;
      transition: box-shadow .2s ease, transform .2s ease;
    }
    .card:hover { box-shadow: 0 6px 20px rgba(0,0,0,.08); transform: translateY(-1px); }

    .thumb {
      display: block;
      width: 100%;
      height: 180px;       /* âœ… guaranteed visible height */
      object-fit: cover;
      background: #f4f4f4;
    }
    .thumb.placeholder {
      display:flex; align-items:center; justify-content:center; color:#999; font-size:.9rem;
    }

    .card-body { padding: 14px 16px 18px; }
    .card-title { margin: 0 0 6px; font-size: 18px; line-height: 1.25; }
    .card-meta { margin: 0; color: #777; font-size: 13px; }
  </style>
</Base>

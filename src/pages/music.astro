---
import Base from '../layouts/Base.astro';

const bandcamp = [
  {
    title: 'Echoes and Reflections',
    url: 'https://telepathicbeing.bandcamp.com/album/echoes-and-reflections',
    embed: 'https://bandcamp.com/EmbeddedPlayer/album=3516792777/size=large/bgcol=ffffff/linkcol=0687f5/artwork=small/transparent=true/',
  },
  {
    title: 'Transfigured Resonance',
    url: 'https://telepathicbeing.bandcamp.com/album/transfigured-resonance',
    embed: 'https://bandcamp.com/EmbeddedPlayer/album=1870514498/size=large/bgcol=ffffff/linkcol=0687f5/artwork=small/transparent=true/',
  },
  {
    title: 'SNOW',
    url: 'https://telepathicbeing.bandcamp.com/album/snow',
    embed: 'https://bandcamp.com/EmbeddedPlayer/album=694006483/size=large/bgcol=ffffff/linkcol=0687f5/artwork=small/transparent=true/',
  },
  {
    title: 'Cerberu, fiera crudele e diversa (Eight Tower Records)',
    url: 'https://eighthtowerrecords.bandcamp.com/track/cobi-van-tonder-cerbero-fiera-crudele-e-diversa',
    embed: 'PASTE-CERBERU-EMBED-SRC-HERE',
  },
];

const soundcloud = {
  title: 'Microtonal Collection (SoundCloud)',
  url: 'https://soundcloud.com/otoplasma/sets/microtonal-collection',
  embed: 'https://w.soundcloud.com/player/?url=https%3A//soundcloud.com/otoplasma/sets/microtonal-collection&color=%23442a25&auto_play=false&hide_related=false&show_comments=true&show_user=true&show_reposts=false&show_teaser=true&visual=true',
};
---

<Base title="Music">
  <article class="post music">
    <h1>Music</h1>

    <p class="intro">
      You’re invited to listen here. If you’d like to support my work, purchasing on Bandcamp
      (including pay-what-you-want when available) directly supports the continuation of my
      artistic and research practice.
    </p>

    <section class="block" aria-labelledby="support-heading">
      <h2 id="support-heading" class="section-title">Support via Bandcamp</h2>

      <div class="stack" role="navigation" aria-label="Bandcamp embeds and links">
        {bandcamp.map((item) => (
          <div class="item">
            <h3 class="item-title">{item.title}</h3>

            <div class="embed">
              <iframe
                title={`Bandcamp embed: ${item.title}`}
                style="border: 0; width: 100%; height: 360px;"
                src={item.embed}
                seamless
              ></iframe>
            </div>

            <p class="small">
              <a href={item.url} target="_blank" rel="noopener noreferrer">
                Open on Bandcamp
              </a>
            </p>
          </div>
        ))}
      </div>
    </section>

    <section class="block" aria-labelledby="listen-heading">
      <h2 id="listen-heading" class="section-title">Listen via SoundCloud</h2>

      <div class="embed">
        <iframe
          title="SoundCloud playlist: Microtonal Collection"
          width="100%"
          height="380"
          scrolling="no"
          frameborder="no"
          allow="autoplay"
          src={soundcloud.embed}
        ></iframe>
      </div>

      <p class="small">
        <a href={soundcloud.url} target="_blank" rel="noopener noreferrer">
          Open playlist on SoundCloud
        </a>
      </p>
    </section>
  </article>
</Base>

<style>
  .music { text-align: left; }

  .intro {
    color: var(--muted);
    margin: 6px 0 18px;
    line-height: 1.65;
  }

  .block {
    margin-top: 22px;
    padding-top: 18px;
    border-top: 1px dashed var(--border);
  }

  .section-title {
    margin: 0 0 12px;
    font-weight: 400;
  }

  .embed {
    border: 1px solid var(--border);
    border-radius: 10px;
    overflow: hidden;
    background: var(--card);
    box-shadow: 0 1px 6px rgba(0,0,0,.04);
  }

  .stack {
    display: flex;
    flex-direction: column;
    gap: 22px;
    margin-top: 12px;
  }

  .item-title {
    margin: 0 0 10px;
    font-weight: 600;
    font-style: italic;
    letter-spacing: .1px;
  }

  .small {
    margin: 10px 0 0;
    color: var(--muted);
    font-size: 14px;
    line-height: 1.5;
  }

  .small a {
    color: var(--accent);
    text-decoration: none;
  }
  .small a:hover { text-decoration: underline; }
</style>

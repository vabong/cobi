<Base title="List of Compositions">
  <article class="post compositions">
    <h1>List of Compositions</h1>

    <p class="intro">
      A chronological selection of compositions and works.
    </p>

    <ol class="works" aria-label="List of compositions">
      {compositions.map((c) => (
        <li class="work">
          <p class="line">
            <span class="title">{c.title}</span>
            {c.year ? <span class="year">({c.year})</span> : null}
          </p>
          {c.meta ? <p class="meta">{c.meta}</p> : null}
        </li>
      ))}
    </ol>
  </article>
</Base>

<style>
  .compositions .intro {
    color: var(--muted);
    margin-top: 6px;
    margin-bottom: 18px;

---
import { getCollection } from "astro:content";

const posts = await getCollection("blog");

// sort newest first
posts.sort((a, b) => new Date(b.data.publishDate) - new Date(a.data.publishDate));
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Blog | Fakeland</title>
  </head>

  <body class="font-sans text-gray-900 bg-white">
    <main class="max-w-5xl mx-auto px-4 py-12">
      <h1 class="text-4xl font-bold mb-10">Blog</h1>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map((post) => (
          <article class="group bg-white rounded-2xl overflow-hidden shadow hover:shadow-lg transition">
            <a href={`/blog/${post.slug}/`} class="block no-underline text-inherit">
              {post.data.cover ? (
                <img
                  src={post.data.cover}
                  alt={post.data.title}
                  class="post-thumb"
                  loading="lazy"
                />
              ) : (
                <div class="thumb-placeholder">
                  No image
                </div>
              )}

              <div class="p-4">
                <h2 class="text-xl font-semibold mb-1 group-hover:underline">
                  {post.data.title}
                </h2>

                {post.data.publishDate && (
                  <p class="text-sm text-gray-500 mb-2">
                    {new Date(post.data.publishDate).toLocaleDateString()}
                  </p>
                )}
              </div>
            </a>
          </article>
        ))}
      </div>
    </main>

    <style>
      /* âœ… Ensures thumbnails always display */
      .post-thumb {
        display: block;
        width: 100%;
        height: 14rem;
        object-fit: cover;
        background: #f4f4f4;
        border: none;
      }

      .thumb-placeholder {
        width: 100%;
        height: 14rem;
        background: #f9f9f9;
        color: #aaa;
        font-size: 0.875rem;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      article {
        border-radius: 1rem;
        overflow: hidden;
        background: #fff;
        transition: transform 0.15s ease, box-shadow 0.15s ease;
      }

      article:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
      }

      h1 {
        font-family: "Josefin Slab", Georgia, serif;
      }

      body {
        font-family: Helvetica, Arial, sans-serif;
      }
    </style>
  </body>
</html>

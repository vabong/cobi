---
// 1. We import the Base layout so this page gets the Sidebar & Nav automatically
import Base from '../layouts/Base.astro';

// 2. This tells Astro to build this page as static HTML (faster, safer)
export const prerender = true;
---

<Base title="Home">
  <div class="home-wrapper">
    <div class="message-box">
      <h1>COBI VAN TONDER</h1>
      <p>
        My portfolio is currently being rebuilt.<br />
        New work, writing, music, and archive coming soon.
      </p>
    </div>
  </div>
</Base>

<style>
  /* We don't need to style the sidebar here because <Base> handles it.
     We only style the specific content for the homepage.
  */

  .home-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 60vh; /* Centers content vertically */
    width: 100%;
  }

  .message-box {
    background: white;
    padding: 3rem 4rem;
    border-radius: 6px;
    box-shadow: 0px 3px 10px rgba(0, 0, 0, 0.05);
    text-align: center;
    max-width: 600px;
    border: 1px solid #eee;
  }

  h1 {
    font-family: 'Josefin Slab', serif;
    font-weight: 400;
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
    letter-spacing: 1px;
  }

  p {
    font-family: 'Josefin Sans', sans-serif;
    font-size: 1.1rem;
    line-height: 1.6;
    color: #666;
  }
</style>

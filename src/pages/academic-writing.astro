---
import Base from '../layouts/Base.astro';

const links = [
  { 
    name: 'ResearchGate Profile', 
    url: 'https://www.researchgate.net/profile/Cobi-Van-Tonder',
    domain: 'researchgate.net'
  },
  { 
    name: 'ORCID Record', 
    url: 'https://orcid.org/0000-0001-9309-5632',
    domain: 'orcid.org'
  }
];
---

<Base title="Academic Writing">
  <h1>Academic Writing</h1>
  
  <div class="link-grid">
    {links.map((link) => (
      <a href={link.url} target="_blank" rel="noopener noreferrer" class="link-card">
        <div class="link-info">
          <span class="link-name">{link.name}</span>
          <span class="link-domain">{link.domain}</span>
        </div>
        <span class="link-arrow">&rarr;</span>
      </a>
    ))}
  </div>
</Base>

<style>
  /* Local styles for this page */
  h1 {
    font-family: 'Josefin Slab', serif;
    font-size: 2.5rem;
    margin-bottom: 2rem;
    font-weight: 400;
  }

  .link-grid {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    max-width: 600px;
  }

  .link-card {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 2rem;
    background-color: white; /* or transparent depending on global theme */
    border: 1px solid #ccc;
    border-radius: 4px;
    text-decoration: none;
    color: inherit;
    transition: all 0.2s ease;
  }

  .link-card:hover {
    border-color: #333;
    transform: translateX(5px);
    background-color: #f9f9f9;
  }

  .link-info {
    display: flex;
    flex-direction: column;
  }

  .link-name {
    font-family: 'Josefin Sans', sans-serif;
    font-size: 1.25rem;
    font-weight: 400;
  }

  .link-domain {
    font-family: 'Josefin Sans', sans-serif;
    font-size: 0.85rem;
    color: #666;
    margin-top: 0.25rem;
  }

  .link-arrow {
    font-size: 1.5rem;
    color: #999;
  }
  
  .link-card:hover .link-arrow {
    color: #333;
  }
</style>

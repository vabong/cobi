---
import Base from '../layouts/Base.astro';
---

<Base title="Academic Writing">
  <article class="post academic-writing">
    <h1>Academic Writing</h1>
    <p>
      My academic work and research contributions can be found on the following platforms:
    </p>

    <div class="academic-buttons" role="navigation" aria-label="Academic profile links">
      <a
        href="https://www.researchgate.net/profile/Cobi-Van-Tonder"
        class="academic-btn"
        target="_blank"
        rel="noopener noreferrer"
      >
        ResearchGate Profile
      </a>

      <a
        href="https://orcid.org/0000-0001-9309-5632"
        class="academic-btn"
        target="_blank"
        rel="noopener noreferrer"
      >
        ORCID iD
      </a>
    </div>
  </article>
</Base>

<style>
  .academic-writing {
    text-align: center;
  }

  .academic-buttons {
    display: flex;
    flex-direction: column;
    gap: 18px;
    margin-top: 26px;
  }

  .academic-btn {
    display: block;
    padding: 18px 22px;
    border: 1px solid var(--border);
    border-radius: 10px;
    text-decoration: none;
    font-size: 18px;
    background: var(--card);
    color: var(--text);
    box-shadow: 0 1px 6px rgba(0,0,0,.04);
  }

  .academic-btn:hover {
    transform: translateY(-2px);
  }

  .academic-btn:focus-visible {
    outline: 3px solid var(--accent);
    outline-offset: 2px;
  }
</style>
